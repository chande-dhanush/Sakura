{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sakura",
  "version": "13.0.0",
  "identifier": "com.sakura.assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "node prebuild.cjs && npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "bubble",
        "title": "Sakura",
        "url": "/bubble",
        "width": 220,
        "height": 220,
        "minWidth": 220,
        "minHeight": 220,
        "maxWidth": 220,
        "maxHeight": 220,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "focus": false
      },
      {
        "label": "main",
        "title": "Sakura",
        "url": "/",
        "width": 480,
        "height": 640,
        "minWidth": 320,
        "minHeight": 400,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "visible": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "shadow": false,
        "focus": true
      },
      {
        "label": "logs",
        "title": "Sakura Sight",
        "url": "/logs",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "visible": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "shadow": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3210 http://127.0.0.1:3210 ws://localhost:3210; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/sakura-backend"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}